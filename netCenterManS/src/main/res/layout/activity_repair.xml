<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_repair_commit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#0099cc">
        <ImageView
            android:id="@+id/img_repair_cancel"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_action_arrow_left"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="报修申请"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"
            android:textColor="#ffffff"/>
    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障描述" />

            <EditText
                android:id="@+id/et_repair_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                >

                <requestFocus />
            </EditText>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最佳上门维修时间" />

            <EditText
                android:id="@+id/et_repair_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                >
            </EditText>
        </TableRow>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="故障详细描述" />

        <EditText
            android:id="@+id/et_repair_reason_info"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:maxLines="5"
            android:visibility="visible" >
        </EditText>
    </TableLayout>

    <TextView
        android:id="@+id/tv_repair_c_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="提交" />

</LinearLayout>